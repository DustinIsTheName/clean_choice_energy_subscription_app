<div class="login-container">
  <div class="login-header">
    <%= image_tag("cce-logo.png") %>
  </div><!-- .login-header -->
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "login-form"}) do |f| %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email Address" %>
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password" %>
    <% if devise_mapping.rememberable? and false -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>
    <%= f.button "Log In", style: "margin-bottom: 0;" %>
    <%= render "devise/shared/links" %>
  <% end %>
</div>