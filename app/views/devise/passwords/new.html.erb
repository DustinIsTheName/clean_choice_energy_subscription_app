<div class="login-container">
  <div class="login-header" style="text-align: center;">
    <h2>Forgot your password?</h2>
  </div><!-- .login-header -->
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), :html => { method: :post, :class => "login-form"}) do |f| %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email Address" %>
    
    <%= f.button "Send reset password instructions", style: "margin-bottom: 10px;" %>
    <%= render "devise/shared/links" %>
  <% end %>
</div>
