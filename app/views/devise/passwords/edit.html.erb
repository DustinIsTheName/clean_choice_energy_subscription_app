

<div class="login-container">
  <div class="login-header" style="text-align: center;">
    <h2>Change your password</h2>
  </div><!-- .login-header -->
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), :html => { method: :put, :class => "login-form"}) do |f| %>
    <%= devise_error_messages! %>
    <%= f.hidden_field :reset_password_token %>

    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "New password" %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em><br />
    <% end %>
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm new password" %>
    
    <%= f.button "Change my password", style: "margin-bottom: 0;" %>
    <%= render "devise/shared/links" %>
  <% end %>
</div>
