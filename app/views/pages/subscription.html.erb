<% if current_user.access == "customer_care" or current_user.access == "admin" %>
  
  <% if false %>
    <div class="page-content">
      <div class="container page-title-container">
        <div class="page-title align-left">Subscriptions</div>
        <button id="reveal-add-single-subscription" class="align-right">Add Subscription</button>
      </div><!-- .container -->
      <div class="container">
        <div class="add-container clearfix" style="display: none;">
          <div class="add-title">Add Subscription</div>
          <div class="add-subscription-form">
            <div class="add-subscription-fields align-left">
              <input type="text" placeholder="First Name" tabindex="1"/>
              <input type="text" placeholder="Street Address" tabindex="4"/>
              <input type="text" placeholder="Credit Card #" tabindex="9"/>
